{% extends 'base.html.twig' %}

{% block title %}Fitness Club - Nouvelle structure{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/adminNavBar.css') }}">
    <link rel="stylesheet" href="{{ asset('build/formAdd.css') }}">
{% endblock%}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adminNavBar') }}
    {{ encore_entry_script_tags('formAdd') }}

{% endblock%}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {% include 'Partials/_admin_navBar.html.twig' %}
    <div class="main-container">

    <div class="form-add">
        <h2>Nouvelle structure</h2>
    {{ form_start(structureForm) }}
    {{ form_row(structureForm.structure.partner) }}
    {{ form_row(structureForm.user.email) }}
    {{ form_row(structureForm.user.plainPassword, {
        label: 'Mot de passe '
    }) }}
    {{ form_row(structureForm.structure.address) }}
    {{ form_row(structureForm.structure.zipcode) }}

    {{ form_row(structureForm.structure.city) }}
    <div class="form-btn">
    <button type="submit" class="btn submit-btn">Ajouter la structure</button>
    {{ form_end(structureForm) }}
    </div>
    </div>
{% endblock %}