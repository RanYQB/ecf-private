{% extends 'base.html.twig' %}

{% block title %}Fitness Club{% endblock %}



{% block stylesheets %}
    {{ parent() }}
   <link rel="stylesheet" href="{{ asset('build/adminNavBar.css') }}">
    <link rel="stylesheet" href="{{ asset('build/panel.css') }}">
{% endblock%}

{% block javascripts %}
    {{ encore_entry_script_tags('adminNavBar') }}
    {{ encore_entry_script_tags('panel') }}
{% endblock%}
{% block body %}
    {% include 'Partials/_admin_navBar.html.twig' %}
<div class="main-container">
    <div class="hi-manager">
        <div class="wave-icon"></div>
        <h2>Bonjour Manager !</h2>
    </div>
    <h3>Tableau de bord</h3>
    <div class="dashboard-cards">
        <div class="dashboard-card">
            <h4>Partenaires</h4>
            <div class="card-content">
                <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#4c99cd" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg>
                </div>
                <p>{{ partners|length }}</p>
            </div>
        </div>
        <div class="dashboard-card">
            <h4>Structures</h4>
            <div class="card-content">
                <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#4c99cd" class="bi bi-building" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022zM6 8.694 1 10.36V15h5V8.694zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5V15z"/>
                    <path d="M2 11h1v1H2v-1zm2 0h1v1H4v-1zm-2 2h1v1H2v-1zm2 0h1v1H4v-1zm4-4h1v1H8V9zm2 0h1v1h-1V9zm-2 2h1v1H8v-1zm2 0h1v1h-1v-1zm2-2h1v1h-1V9zm0 2h1v1h-1v-1zM8 7h1v1H8V7zm2 0h1v1h-1V7zm2 0h1v1h-1V7zM8 5h1v1H8V5zm2 0h1v1h-1V5zm2 0h1v1h-1V5zm0-2h1v1h-1V3z"/>
                </svg>
                </div>
                <p>{{ structures|length }}</p>
            </div>
        </div>
        <div class="dashboard-card">
            <h4>Nombre d'utilisateurs</h4>
            <div class="card-content">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#4c99cd" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"/>
                    </svg>
                </div>
                <p>{{ users|length }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
